<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="stylesheet" href="search_style.css">
<title>Universities in Canada</title>
</head>
<body>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/search" class="active">Universities</a></li>
            <li><a href="/review">Reviews</a></li>
            <li><a href="/calculator">Programs</a></li>
            <li class="profile-menu">
                <img src="/profile.png" alt="Profile" class="profile-icon">
                <div class="dropdown">
                    <button>Profile</button>
                    <button>Settings</button>
                    <form action="/logout" method="post"><button type="submit">Logout</button></form>
                </div>
            </li>
        </ul>
    </nav>

  <div class="container">
    <h1>Universities in Canada</h1>
    <div class="cards-wrapper">
      <% data5.forEach(row => { %>
        <%
        // Map each university name to its image path or URL
        const images = {
        'University of Toronto': 'night.jpg',
        'University of Waterloo': 'orange_city.jpg',
        'Western University': 'purple_city.jpg',
        'Queens University': 'sunset.jpg'
        };
        %>
        <% 
          let url;
          if(row.name === 'University of Toronto') url = 'uoft';
          else if(row.name === 'University of Waterloo') url = 'uwaterloo';
          else if(row.name === 'Western University') url = 'western';
          else if(row.name === 'Queens University') url = 'queens';
          else url = row.name.toLowerCase().replace(/\s+/g, '');
        %>
        <a href="/<%= url %>" class="card" aria-label="<%= row.name %>">
          <img src="<%= images[row.name] || 'https://via.placeholder.com/280x160?text=University+Image' %>" alt="<%= row.name %> Image" />
          <div class="card-content">
            <div class="university-name"><%= row.name %></div>
            <div class="badges">
              <span class="badge"><%= row.province %></span>
              <span class="badge"><%= row.city %></span>
              <span class="badge"><%= row.country %></span>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
  </div>
</body>
</html>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    document.querySelector('.container').classList.add('slide-up');
  });
</script>